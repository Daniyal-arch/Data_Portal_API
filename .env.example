# GeoDataHub Environment Variables
# Copy this file to .env and configure your API keys

# LLM Provider Configuration (choose one or more)

# Groq API (recommended - fast and free tier available)
# Get API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# OpenRouter API (alternative - has free models)
# Get API key from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Ollama (local LLM - no API key needed)
# Install from: https://ollama.ai/
# Run: ollama pull llama3
# OLLAMA_BASE_URL=http://localhost:11434  # Default, usually no need to set

# LLM Provider Selection
# Options: auto, groq, ollama, openrouter, regex
# Default: auto (tries all providers in order)
LLM_PROVIDER=auto

# API Configuration (for FastAPI service)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# EODAG Configuration Path (optional)
# EODAG_CONFIG_PATH=~/.config/eodag/eodag.yml
